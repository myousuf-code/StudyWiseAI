# Environment Variables for StudyWiseAI
# Copy this file to .env and update with your actual values

# Application Settings
DEBUG=True
HOST=127.0.0.1
PORT=8000

# Security
SECRET_KEY=your-secret-key-change-in-production-make-it-random-and-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=sqlite:///./studywiseai.db
# For production PostgreSQL, use: postgresql://studywise:password@localhost:5432/studywiseai
# REDIS_URL=redis://localhost:6379/0  # Optional - for caching

# Local AI Configuration (GPT4All - Completely Free!)
LOCAL_AI_MODEL=orca-mini-3b-gguf2-q4_0.gguf

# OpenAI Configuration (Optional - costs money)
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-3.5-turbo

# Email Configuration (for notifications)
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=studywiseai@example.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com

# Production Settings (set to False in production)
ALLOWED_HOSTS=["http://localhost:8000", "http://127.0.0.1:8000"]